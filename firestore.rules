rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users collection - Development: Allow all authenticated users to read/write
    match /users/{userId} {
      allow read, write: if isAuthenticated();
    }
    
    // Announcements collection - Development: Allow all authenticated users to read/write
    match /announcements/{announcementId} {
      allow read, write: if isAuthenticated();
    }
    
    // All other collections - Development: Allow all authenticated users
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}

